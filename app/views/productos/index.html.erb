<p id="notice"><%= notice %></p>

<h1>Productos</h1>

<table>
<% @productos.each do |producto| %>
  <tr class="<%= cycle('list_line_odd', 'list_line_even') %>">

    <td>
      <%= image_tag(producto.imagen.thumb.url, class: 'list_image') %>
    </td>

    <td class="list_descripcion">
      <dl>
        <dt><%= producto.nombre %></dt>
        <dd><%= truncate(strip_tags(producto.descripcion),
               length: 80) %></dd>
      </dl>
    </td>

    <td class="list_actions">
      <%= link_to 'Mostrar', producto %><br/>
      <%= link_to 'Editar', edit_producto_path(producto) %><br/>
      <%= link_to 'Eliminar', producto, method: :delete,
                  data: { confirm: '¿Estás seguro de eliminarlo?' } %>
    </td>
  </tr>
<% end %>
</table>

<br />

